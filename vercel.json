{
  "version": 2,
  "buildCommand": "cd client && npm run build",
  "devCommand": "node app.js",
  "public": "client/dist",
  "env": [
    "MONGODB_URI",
    "JWT_SECRET",
    "NODE_ENV",
    "FRONTEND_URL"
  ],
  "regions": ["iad1"],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
